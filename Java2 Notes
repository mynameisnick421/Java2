int sales[][] = {{4500,3400,2300,2300,12,0,1212,12243,2323,235245,12,4},
				 {13414,1414,431134341,14334,23,134,134134,134,124134,124,124,124},
				 {132,1212,123132,123123,123,123,123,12,23,245,45,34},
				 {134,456,52,54,6,568,245,245,76,523,426,346}}; //hardcoded
				 

int sales[][] = new int[4][12];


for(int d=0;d<4;d++){
	System.out.print(d+1+"\t");
	for(m=0;m<12;m++{
		System.out.print(sales[d][m]+"\t");
	}
	System.out.println();
}